  "inputs": [
    {
      "id": "reportOutputPath",
      "type": "promptString",
      "description": "Report bundle output path",
      "default": ".vscode/report-bundle.zip"
    },
    {
      "id": "specPath",
      "type": "promptString",
      "description": "Path to SPECIFICATION.md for initializer"
    },
    {
      "id": "includeWorkspaceFile",
      "type": "pickString",
      "description": "Include VS Code workspace file for optimal experience?",
      "options": [
        "Yes (recommended)",
        "No"
      ],
      "default": "Yes (recommended)"
    },
    {
      "id": "bootstrapMode",
      "type": "pickString",
      "description": "Bootstrap mode",
      "options": [
        "defaults",
        "customize"
      ]
    },
    {
      "id": "versionControlPolicy",
      "type": "pickString",
      "description": "Version control policy",
      "options": [
        "git-local",
        "git-remote",
        "git-remote-ci"
