    {
      "label": "Governance Bootstrap",
      "type": "shell",
      "dependsOn": [
        "Governance Preflight"
      ],
      "dependsOrder": "sequence",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "scripts/bootstrap.ps1",
        "-Mode",
        "${input:bootstrapMode}",
        "-VersionControl",
        "${input:versionControlPolicy}",
        "-Testing",
        "${input:testingPolicy}",
        "-Documentation",
        "${input:documentationPolicy}",
        "-Language",
        "${input:primaryLanguage}",
        "-Frameworks",
        "${input:frameworks}",
        "-Autonomy",
        "${input:autonomyPolicy}",
        "-IncludeWorkspaceFile",
        "${input:includeWorkspaceFile}"
      ],
      "linux": {
        "command": "bash",
        "args": [
          "scripts/bootstrap.sh",
          "${input:bootstrapMode}",
          "${input:versionControlPolicy}",
          "${input:testingPolicy}",
          "${input:documentationPolicy}",
          "${input:primaryLanguage}",
          "${input:frameworks}",
          "${input:autonomyPolicy}"
        ]
      },
      "osx": {
        "command": "bash",
        "args": [
          "scripts/bootstrap.sh",
          "${input:bootstrapMode}",
          "${input:versionControlPolicy}",
          "${input:testingPolicy}",
          "${input:documentationPolicy}",
          "${input:primaryLanguage}",
          "${input:frameworks}",
          "${input:autonomyPolicy}"
        ]
      }
    },
